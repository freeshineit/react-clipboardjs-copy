{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDirs": ["src"],
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "lib": ["ES2016", "DOM"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "react-clipboardjs-copy": ["src/lib/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "es", "dist"]
}
